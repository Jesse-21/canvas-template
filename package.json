{
  "name": "@ricardomatias/canvas-template",
  "version": "1.0.0",
  "description": "All HTML content needs to be minted in a zip file. You can have multiple files inside your zip, however there are a few requirements you can't miss.",
  "main": "sketch.js",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "esbuild index.js --outfile=public/index.js --bundle --minify",
    "package": "npm run thumbnail && npm run zip",
    "zip": "zip -r -j objekt/sketch.zip public/*",
    "thumbnail": "npm run build && node --experimental-specifier-resolution='node' thumbnail.js"
  },
  "private": true,
  "keywords": [],
  "author": "Ricardo Matias",
  "license": "MIT",
  "dependencies": {
    "canvas-sketch-util": "^1.10.0",
    "just-debounce": "^1.1.0",
    "raf": "^3.4.1"
  },
  "devDependencies": {
    "esbuild": "^0.10.0",
    "npm-run-all": "^4.1.5",
    "playwright-firefox": "^1.10.0",
    "serve-handler": "^6.1.3",
    "vite": "^2.1.3"
  }
}
